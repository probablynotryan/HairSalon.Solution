@using HairSalon.Models;
<h4>View All Clients</h4>
@if (Model.Count > 0)
{
  <input type="text" id="search-clients" onkeyup="search()" placeholder="Search clients..">
}
<div id="client-box">
  <ul>
    @if (Model.Count == 0)
    {
      <li>No clients currently listed.</li>
    }
    @foreach (Client client in Model)
    {
      <li>@client.Name  @client.PhoneNumber</li>
    }
  </ul>
</div>
<button class="btn-purple"> @Html.ActionLink("Back", "Index", "/")</button>
<script src="~/scripts/search.js"></script>